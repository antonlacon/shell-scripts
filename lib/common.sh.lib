# Stores common functions for shell scripts
#

# die(msg, code) - exit with a message and exit code

die() {
	echo "$1" # echo command's death report
	# use provided exit signal or default to 1
	if [ -n "$2" ]; then
		exit "$2"
	else
		exit 1
	fi
}
